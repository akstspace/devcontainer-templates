{
    "id": "python",
    "version": "1.0.0",
    "name": "Python",
    "description": "A Python development container with common tools and extensions",
    "documentationURL": "https://github.com/akstspace/devcontainer-templates/tree/main/src/python",
    "licenseURL": "https://github.com/akstspace/devcontainer-templates/blob/main/LICENSE",
    "options": {
        "pythonVersion": {
            "type": "string",
            "description": "Select the Python version to use",
            "proposals": [
                "3.12",
                "3.11",
                "3.10"
            ],
            "default": "3.12"
        },
        "installPoetry": {
            "type": "boolean",
            "description": "Install Poetry package manager",
            "default": false
        }
    },
    "platforms": [
        "Any"
    ]
}
