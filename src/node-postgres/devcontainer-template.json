{
  "id": "node-postgres",
  "version": "1.0.0",
  "name": "Node.js & PostgreSQL",
  "description": "Node.js development environment with PostgreSQL database. Includes customizable Dockerfile for adding tools and packages.",
  "options": {
    "nodeVersion": {
      "type": "string",
      "description": "Node.js version",
      "proposals": ["22", "20", "18", "16"],
      "default": "22"
    },
    "postgresVersion": {
      "type": "string",
      "description": "PostgreSQL version",
      "proposals": ["18", "17", "16", "15", "14"],
      "default": "18"
    }
  }
}
